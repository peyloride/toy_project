<span class="likes-section" data-id="<%= toy.id %>">
  <% if current_user.voted_for? toy %>
    <i class="fa fa-heart" aria-hidden="true"></i>
  <% else %>
    <%= link_to toy_like_path(toy), method: :post, remote: true do %>
      <i class="fa fa-heart-o" aria-hidden="true"></i>
    <% end %>
  <% end %>
    <%= toy.get_likes.size %>
</span>
