<div class="container">
  <%= form_for @toy, url: {action: "create"} do |f| %>
    <div class="form-group row">
      <label for="inputName" class="col-sm-2 col-form-label">Toy Name</label>
      <div class="col-sm-10">
        <%= f.text_field :name, placeholder: "Toy name", class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <label for="inputDescription" class="col-sm-2 col-form-label">Toy Description</label>
      <div class="col-sm-10">
        <%= f.text_area :description, placeholder: "Toy description", class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <label for="categoryName" class="col-sm-2 col-form-label">Toy Category</label>
      <div class="col-sm-10">
        <%= f.select :toy_type, Toy.toy_types.keys.map {|key| [key.humanize, key]}, {}, {class: "form-control"} %>
      </div>
    </div>
    <div class="form-group row">
      <label for="ImageField" class="col-sm-2 col-form-label">Upload an Image</label>
      <div class="col-sm-10">
        <%= f.file_field :image, class: "form-control-file" %>
      </div>
    </div>
    <%= link_to 'Back', :back , class: "btn btn-secondary" %>
    <%= f.submit "Create", class: "btn btn-primary" %>
  <% end %>
</div>
